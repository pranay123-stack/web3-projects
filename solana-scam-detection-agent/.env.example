# Solana RPC Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Helius API (recommended for better rate limits)
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_WS_URL=wss://atlas-mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Alert Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Database
DATABASE_PATH=./data/scam_detection.db

# Server Configuration
PORT=3001
NODE_ENV=development

# Detection Thresholds
MIN_SCAM_CONFIDENCE=0.7
ALERT_THRESHOLD=0.8

# Monitoring
MONITOR_NEW_TOKENS=true
MONITOR_LP_EVENTS=true
CHECK_INTERVAL_MS=5000
