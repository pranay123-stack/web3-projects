# ===========================================
# Pump.fun Clone Frontend - Environment Configuration
# ===========================================
# Copy this file to .env.local and update the values
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser

# ===========================================
# API Configuration
# ===========================================
# Development: http://localhost:3001/api
# Production (via nginx): /api
NEXT_PUBLIC_API_URL=/api

# WebSocket URL
# Development: ws://localhost:3001/ws
# Production: wss://yourdomain.com/ws
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws

# ===========================================
# Solana Configuration
# ===========================================
# Mainnet: https://api.mainnet-beta.solana.com
# Devnet: https://api.devnet.solana.com
# Custom RPC for better performance recommended for production
NEXT_PUBLIC_SOLANA_RPC=https://api.devnet.solana.com

# Your deployed Pump.fun clone program ID
NEXT_PUBLIC_PROGRAM_ID=YourProgramIdHere11111111111111111111111111111

# Solana network
# Options: mainnet-beta, devnet, testnet
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# ===========================================
# Wallet Configuration
# ===========================================
# Enable/disable wallet adapters
NEXT_PUBLIC_ENABLE_PHANTOM=true
NEXT_PUBLIC_ENABLE_SOLFLARE=true
NEXT_PUBLIC_ENABLE_BACKPACK=true
NEXT_PUBLIC_ENABLE_LEDGER=true

# ===========================================
# Application Configuration
# ===========================================
NEXT_PUBLIC_APP_NAME=Pump.fun Clone
NEXT_PUBLIC_APP_DESCRIPTION=Create and trade tokens on Solana
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Social links (optional)
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/youraccount
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/yourserver
NEXT_PUBLIC_TELEGRAM_URL=https://t.me/yourchannel

# ===========================================
# Feature Flags
# ===========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_CHAT=true

# Maintenance mode
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_MAINTENANCE_MESSAGE=We are currently under maintenance. Please check back soon.

# ===========================================
# Analytics (Optional)
# ===========================================
# Google Analytics
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Mixpanel
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Plausible Analytics
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com

# ===========================================
# UI Configuration
# ===========================================
# Default theme: light, dark, system
NEXT_PUBLIC_DEFAULT_THEME=system

# Currency display
NEXT_PUBLIC_DEFAULT_CURRENCY=USD

# Refresh intervals (milliseconds)
NEXT_PUBLIC_PRICE_REFRESH_INTERVAL=5000
NEXT_PUBLIC_BALANCE_REFRESH_INTERVAL=10000

# ===========================================
# Token Configuration
# ===========================================
# Default token creation settings
NEXT_PUBLIC_DEFAULT_TOKEN_DECIMALS=9
NEXT_PUBLIC_MIN_TOKEN_SUPPLY=1000000
NEXT_PUBLIC_MAX_TOKEN_SUPPLY=1000000000000

# Trading settings
NEXT_PUBLIC_DEFAULT_SLIPPAGE=0.5
NEXT_PUBLIC_MAX_SLIPPAGE=50

# ===========================================
# Image Upload
# ===========================================
NEXT_PUBLIC_MAX_IMAGE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ===========================================
# Error Tracking (Optional)
# ===========================================
# Sentry
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# Development Only
# ===========================================
# Enable debug mode in development
NEXT_PUBLIC_DEBUG_MODE=false

# Mock wallet for testing
# NEXT_PUBLIC_ENABLE_MOCK_WALLET=false
