# ===========================================
# Pump.fun Clone Backend - Environment Configuration
# ===========================================
# Copy this file to .env and update the values
# NEVER commit .env to version control

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# ===========================================
# MongoDB Configuration
# ===========================================
# Development: mongodb://localhost:27017/pumpfun
# Docker: mongodb://admin:password@mongodb:27017/pumpfun?authSource=admin
MONGODB_URI=mongodb://localhost:27017/pumpfun

# ===========================================
# Redis Configuration
# ===========================================
# Development: redis://localhost:6379
# Docker: redis://:password@redis:6379
REDIS_URL=redis://localhost:6379

# Session configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# ===========================================
# JWT Configuration
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_key_min_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# Solana Configuration
# ===========================================
# Mainnet: https://api.mainnet-beta.solana.com
# Devnet: https://api.devnet.solana.com
# Testnet: https://api.testnet.solana.com
SOLANA_RPC_URL=https://api.devnet.solana.com

# Your deployed Pump.fun clone program ID
PROGRAM_ID=YourProgramIdHere11111111111111111111111111111

# Optional: Custom RPC endpoints for better performance
# SOLANA_RPC_WS_URL=wss://api.devnet.solana.com
# HELIUS_API_KEY=your_helius_api_key
# QUICKNODE_URL=your_quicknode_endpoint

# ===========================================
# Solana Wallet Configuration (Server-side)
# ===========================================
# WARNING: Keep these secure! Never expose in logs or client
# TREASURY_WALLET_PRIVATE_KEY=your_base58_encoded_private_key
# FEE_WALLET_ADDRESS=YourFeeWalletAddress111111111111111111111

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# ===========================================
# Logging Configuration
# ===========================================
# Levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===========================================
# WebSocket Configuration
# ===========================================
WS_PATH=/ws
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# ===========================================
# File Upload Configuration
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Optional: Cloud storage
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_bucket_name
# AWS_S3_REGION=us-east-1

# ===========================================
# Email Configuration (Optional)
# ===========================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_smtp_user
# SMTP_PASS=your_smtp_password
# EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# External Services (Optional)
# ===========================================
# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Analytics
# MIXPANEL_TOKEN=your_mixpanel_token

# ===========================================
# Security Configuration
# ===========================================
BCRYPT_SALT_ROUNDS=12
ENCRYPTION_KEY=your_32_character_encryption_key!

# Optional: IP whitelist for admin routes
# ADMIN_IP_WHITELIST=127.0.0.1,10.0.0.0/8

# ===========================================
# Feature Flags
# ===========================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
