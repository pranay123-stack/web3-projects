# ===========================================
# Pump.fun Clone - Environment Configuration
# ===========================================
# Copy this file to .env and update the values
# NEVER commit .env to version control

# ===========================================
# Environment
# ===========================================
NODE_ENV=production

# ===========================================
# MongoDB Configuration
# ===========================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here
MONGO_DB_NAME=pumpfun

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=your_secure_redis_password_here

# ===========================================
# JWT Configuration
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_key_min_32_characters
JWT_EXPIRES_IN=7d

# ===========================================
# Solana Configuration
# ===========================================
# Use mainnet-beta for production, devnet for testing
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Your deployed Solana program ID
PROGRAM_ID=YourProgramIdHere11111111111111111111111111111

# ===========================================
# Frontend Configuration (Public)
# ===========================================
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_WS_URL=wss://yourdomain.com/ws
NEXT_PUBLIC_SOLANA_RPC=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_PROGRAM_ID=YourProgramIdHere11111111111111111111111111111

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=https://yourdomain.com

# ===========================================
# Server Ports
# ===========================================
HTTP_PORT=80
HTTPS_PORT=443

# ===========================================
# Logging
# ===========================================
# Options: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# ===========================================
# Optional: SSL Certificate Paths
# ===========================================
# SSL_CERT_PATH=/path/to/fullchain.pem
# SSL_KEY_PATH=/path/to/privkey.pem

# ===========================================
# Optional: External Services
# ===========================================
# SENTRY_DSN=https://your-sentry-dsn
# ANALYTICS_ID=your-analytics-id

# ===========================================
# Optional: Rate Limiting
# ===========================================
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
